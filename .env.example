# ===========================================
# HEALTH CHATBOT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=sqlite:///./health_chatbot.db
# For PostgreSQL: postgresql://user:password@localhost:5432/health_chatbot
# For MySQL: mysql://user:password@localhost:3306/health_chatbot

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
DEBUG=false
LOG_LEVEL=INFO
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# HEALTH DATA APIs
# ===========================================
# CDC API (for US health data)
CDC_API_KEY=your_cdc_api_key_here

# FDA OpenFDA API (for drug information)
FDA_API_KEY=your_fda_api_key_here

# News API (for health news)
NEWS_API_KEY=your_news_api_key_here

# ===========================================
# INDIAN HEALTH APIs
# ===========================================
# Data.gov.in API key (for Indian government health data)
DATA_GOV_IN_API_KEY=your_data_gov_in_api_key_here

# COVID19 India API (free, no key required)
COVID19_INDIA_API_KEY=not_required_but_can_be_set

# ===========================================
# LOCATION & WEATHER SERVICES
# ===========================================
# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenCage API (alternative geocoding service)
OPENCAGE_API_KEY=your_opencage_api_key_here

# OpenWeatherMap API (for weather-based health advisories)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ===========================================
# MEDICAL APIs
# ===========================================
# Infermedica API (for symptom checking)
INFERMEDICA_APP_ID=your_infermedica_app_id_here
INFERMEDICA_APP_KEY=your_infermedica_app_key_here

# ===========================================
# SMS/MESSAGING SERVICES
# ===========================================
# Twilio (for SMS functionality)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
# Meta WhatsApp Business API
WHATSAPP_TOKEN=your_whatsapp_business_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# ===========================================
# NOTES FOR SETUP
# ===========================================
# 1. Most APIs offer free tiers - check their documentation
# 2. For production, ensure all keys are properly secured
# 3. Some services like Disease.sh and COVID19 India are free
# 4. Test your configuration using the /health endpoint
# 5. Check individual service status using their respective /status endpoints
